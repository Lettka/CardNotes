<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    tools:context=".NoteContentFragment">

    <ImageView
        android:id="@+id/note_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightImg"
        android:scaleType="centerCrop"
        tools:src="@drawable/movie" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fragment"
            android:text="@string/back" />

        <CheckBox
            android:id="@+id/noteLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/note_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fragment"
            android:focusable="false"
            android:gravity="end"
            android:textSize="@dimen/text_size_date"
            android:textStyle="italic"
            tools:text="11/11/2021" />
    </LinearLayout>
    <TextView
        android:id="@+id/noteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_fragment"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        tools:text="caption" />

    <MultiAutoCompleteTextView
        android:id="@+id/notesContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_fragment"
        android:minHeight="@dimen/minHeight"
        android:textSize="@dimen/text_size_fragment"
        tools:text="text" />

</LinearLayout>